<h1>Welcome to RIKKA BEAUTY</h1>
<h2>Find Your Password</h2>


<%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
  <p>
    <%= f.label :Email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :Verification %><br>
    <%= link_to '<button type="button">Send Code</button>'.html_safe, forgot_users_path %><br><br>
    <%= f.text_field :verification %>
  </p>
   <p>
    <%= f.label :New_Password %><br>
    <%= f.text_field :password %>
  </p>
  <%= link_to '<button type="button">Submit</button>'.html_safe, signin_users_path %>
<% end %>

<%= link_to 'Back', signin_users_path %>