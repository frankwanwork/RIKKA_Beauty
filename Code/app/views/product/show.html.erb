    <h1>&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp Products Gallery</h1>   
    <li>&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp <%= link_to 'Add New', add_product_index_path %></li>  
    <li>&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp <%= link_to 'Edit', edit_product_index_path %></li>   <br> <br> 
   

  
    <h2>&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp Search by product name: </h2>
    <%= form_tag(product_index_path, method: :get) do %>
        &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp     
    
        <%= text_field_tag(:product_name, params[:product_name]) %>
        <%= submit_tag ("Search") %>
    <% end %>
    
    <br><br>
    
    <table width="80%" border="1" class="t2">
    <thead>
        <th width="10%"> ID </th>
        <th width="20%"> Product Name </th>
        <th width="30%"> Description </th>
        <th width="20%"> Price($) </th>
        <th width="20%"> Picture </th>
    </thead>
    
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td> <%= product.id %> </td>
            <td> <%= product.productname %> </td>
            <td> <%= product.description %></td>
            <td> <%= product.price  %> </td>
            <td> <%=  image_tag product.pics, width:'200px' %> </td>
        </tr>
        <% end %>  
    </tbody>

    
  </table>

   
  